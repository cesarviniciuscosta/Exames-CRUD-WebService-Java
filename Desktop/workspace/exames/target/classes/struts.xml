<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="default" extends="struts-default">
	
		<!--Register representa o Create do nosso crud  -->
		
		<action name="registeruser" class="br.com.soc.action.RegisterAction">
			<result name="REGISTER">/pages/register.jsp</result>
			
		</action>
		
		<!--Report representa o read do nosso crud  -->
		
		<action name="reportall" class="br.com.soc.action.ReportAction">
			<result name="REPORT">/pages/report.jsp</result>
			
		</action>
		
		<!--Update do Crud  -->
		
		<action name="updatedetails" class="br.com.soc.action.UpdateAction">
			<result name="UPDATE">/pages/update.jsp</result>
		</action>
		
		<!-- Delete do Crud  -->
		
		<action name="deleterecord" class="br.com.soc.action.DeleteAction">
			<result name="DELETE">/pages/delete.jsp</result>
		</action>
		
	</package>
</struts>